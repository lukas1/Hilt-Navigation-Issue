<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.hiltnavigationissue.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_destinationFragment"
            app:destination="@id/destinationFragment"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_pop_enter_anim"
            app:popExitAnim="@anim/nav_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/destinationFragment"
        android:name="com.example.hiltnavigationissue.DestinationFragment"
        android:label="DestinationFragment" />
</navigation>